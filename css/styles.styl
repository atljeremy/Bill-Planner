// jQuery Mobile Body Element
.ui-body-c, .ui-dialog.ui-overlay-c
  color white
  font-size 13px
  font-family Helvetica, Verdana, Arial, sans-serif
  background-image url('../../i/linen.jpg')
  margin 0px
  padding 0px

// jQuery Mobile Header & Footer Elements
.ui-header, .ui-footer, .ui-page-fullscreen .ui-header, .ui-page-fullscreen .ui-footer 
  height 50px

// jQuery Mobile Header & Footer Button Inner Padding
.ui-header .ui-btn-inner, .ui-footer .ui-btn-inner, .ui-bar .ui-btn-inner 
  padding 5px 3px 0px 5px

// jQuery Mobile Header & Footer Margin Top
.ui-header .ui-btn, .ui-footer .ui-btn, .ui-bar .ui-btn 
  margin-top -4px

// jQuery Mobile Header & Footer Title
.ui-header .ui-title, .ui-footer .ui-title 
  font-size 25px
  text-shadow 2px 2px 4px #000
  filter dropshadow(color=#000, offx=2, offy=2)
  margin-top 10px

// jQuery Mobile Grouped Buttons - Horizontal
.ui-controlgroup-horizontal .ui-checkbox, .ui-controlgroup-horizontal .ui-radio 
  display inline-block
  float none
  margin-right -5px

